<div class="container mt-5">
  <h1 class="mb-4">Recently viewd campgrounds</h1>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @recently_viewed_campgrounds.each do |campground| %>
      <div class="col">
        <div class="card h-100">
          <img src="<%= campground.cover_photo_url %>" class="card-img-top" alt="<%= campground.name %>">
          <div class="card-body">
            <h2 class="card-title h5"><%= link_to campground.name, campground %></h2>
            <p class="card-text"><%= truncate(sanitize(campground.overview.html_safe), length: 150, separator: '</p>', escape: false) %></p>
            <p class="card-text"><small class="text-muted">Location: <%= "#{campground.city}, #{campground.state}" %></small></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

